{
  "name": "@codemo/typescript-eslint-off-project-option",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint src/**/*.ts"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/await-thenable": "error"
    },
    "root": true
  },
  "dependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "typescript": "^4.5.5"
  }
}
