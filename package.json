{
    "name": "codemo",
    "private": true,
    "workspaces": [
        "jest/*",
        "react/*",
        "typescript/*"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json,jsx,ts,tsx,md,html,css}": "prettier --write"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": true
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.1",
        "http-server": "^0.12.3",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.2",
        "prettier": "^2.2.1",
        "prettier-plugin-jsdoc": "^0.2.4",
        "prettier-plugin-organize-imports": "^1.1.1",
        "prettier-plugin-packagejson": "^2.2.8",
        "typescript": "^4.1.2"
    }
}
